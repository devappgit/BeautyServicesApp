<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.servpal.android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ServpalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--START Launch, Login, Signup-->
        <activity
            android:name=".ui.activities.main.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.main.LaunchActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".ui.activities.main.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ui.activities.main.SignupActivity"
            android:label="@string/title_activity_signup" />
        <!--END Launch, Login, Signup-->

        <!--START Search, Content-->
        <activity android:name=".ui.activities.MainActivity" />
        <activity
            android:name=".ui.activities.SearchActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.activities.ProviderServicesActivity"
            android:theme="@style/AppThemeFullBleed" />
        <!--END Search, Content-->

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="3c7d9b13b2f77a4e859333d07111416530a0ebc1" />

    </application>

</manifest>